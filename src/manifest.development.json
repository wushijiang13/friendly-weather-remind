{
    "manifest_version": 3,
    "name": "阿江提醒你",
    "description": "友好的天气提示",
    "version": "0.0.1",
    "options_page": "options.html",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "./icon.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "permissions":[
        "notifications",
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": ["http://*/*", "https://*/*"],
    "icons": {
        "16": "/icon.png",
        "32": "/icon.png",
        "48": "/icon.png",
        "128": "/icon.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}